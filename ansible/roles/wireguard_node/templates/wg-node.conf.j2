[Interface]
Address = {{ hostvars[inventory_hostname].wg_ip }}/32
PrivateKey = {{ node_wg_privkey }}
MTU = {{ wg_mtu }}

[Peer]
# hub
PublicKey = {{ hub_wg_pubkey_effective }}
Endpoint = {{ hostvars[hub_host_effective].hub_public_endpoint }}:{{ wg_listen_port }}
AllowedIPs = {{ hostvars[hub_host_effective].hub_wg_ip }}/32
PersistentKeepalive = 25
