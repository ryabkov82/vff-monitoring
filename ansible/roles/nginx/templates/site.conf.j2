# {{ item.server_name }}
server {
    listen 80;
    server_name {{ item.server_name }};

    # ACME challenge для certbot
    location /.well-known/acme-challenge/ { root /var/www/html; }

    # Всё остальное — в HTTPS
    location / { return 301 https://$host$request_uri; }
}

server {
    listen 443 ssl http2;
    server_name {{ item.server_name }};

    {% if nginx_cert_method == 'existing' %}
    ssl_certificate     {{ nginx_certs[item.name].fullchain }};
    ssl_certificate_key {{ nginx_certs[item.name].privkey }};
    {% else %}
    ssl_certificate     /etc/letsencrypt/live/{{ item.server_name }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ item.server_name }}/privkey.pem;
    {% endif %}

    {% if nginx_basic_auth_enabled %}
    auth_basic "{{ item.basic_desc }}";
    auth_basic_user_file /etc/nginx/.htpasswd;
    {% endif %}

    # Запрет потенциально опасных путей (best-effort)
    location ~ {{ item.block_admin_paths }} { return 403; }

    {% if nginx_allow_list | length > 0 %}
    location / {
        {% for net in nginx_allow_list %}
        allow {{ net }};
        {% endfor %}
        deny all;
        proxy_pass http://{{ item.backend }};
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_http_version 1.1;
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;
        proxy_buffering off;
        client_max_body_size 2m;
        add_header X-Content-Type-Options nosniff;
        add_header X-Frame-Options DENY;
        add_header Referrer-Policy no-referrer;
    }
    {% else %}
    location / {
        limit_req zone=prom_rate burst=20 nodelay;
        proxy_pass http://{{ item.backend }};
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_http_version 1.1;
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;
        proxy_buffering off;
        client_max_body_size 2m;
        add_header X-Content-Type-Options nosniff;
        add_header X-Frame-Options DENY;
        add_header Referrer-Policy no-referrer;
    }
    {% endif %}
}
